{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "lib": ["es6"],
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ]     
  }
}