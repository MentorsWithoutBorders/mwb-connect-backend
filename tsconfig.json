{
  "compilerOptions": {
    "module": "commonjs",
    "isolatedModules": true,
		"esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "es2018",
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "lib": ["es6"],
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ]     
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
}